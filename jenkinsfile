pipeline {
    agent any
    stages {
        stage('Clean Workspace') {
            steps {
                script {
                    sh 'rm -rf test-results/*' // Supprimer les fichiers dans le r√©pertoire test-results
                }
            }
        }
        stage('Build and Install') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.51.0-noble'
                    args '-u root:root'
                }
            }

            steps {
                script {
                    sh 'npm ci'
                    sh 'npx cucumber-js --reporter=line,allure-playwright'
                    stash name: 'allure-results', includes: 'allure-results/*'
                }
            }
        }
    }
    post {
        always {
            unstash 'allure-results'
            script {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'allure-results']]
                ])
            }
        }
    }
}
